<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Acción para abrir el modelo estate.property -->
    <record id="action_estate_property" model="ir.actions.act_window">
        <field name="name">Propiedades</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Vista de lista custom para estate.property - Ejercicio 22 -->
    <record id="view_estate_property_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Propiedades">
                <field name="name"/>
                <field name="tag_ids" widget="many2many_tags"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability"/>
                <field name="state"/>
                <field name="total_area"/>
                <field name="best_offer" readonly="1"/>
            </list>
        </field>
    </record>

    <!-- Vista de formulario custom para estate.property - Ejercicio 23 -->
    <record id="view_estate_property_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Propiedad">
                <header>
                    <field name="state" widget="statusbar"/>
                    
                    <!-- Botón Cancelar -->
                    <button name="action_cancel_property"
                            type="object"
                            string="Cancelar"
                            class="btn-secondary"/>
                    
                    <!-- Botón Marcar como vendida -->
                    <button name="action_mark_sold"
                            type="object"
                            string="Marcar como vendida"
                            class="btn-success"/>
                    <!-- Botón para crear oferta automática -->
                    <button name="action_generate_automatic_offer"
                            type="object"
                            string="Generar oferta automática"
                            class="btn-primary"/>
                    
                </header>
                <sheet>
                    <!-- Ribbon de estado -->
                    <widget name="web_ribbon"
                            title="Vendida"
                            bg_color="bg-danger"
                            invisible="state != 'sold'"/>

                    <h1>
                        <field name="name" placeholder="Nombre propiedad"/>
                    </h1>

                    <group>
                        <field name="tag_ids" widget="many2many_tags"/>
                    </group>
                    
                    <group>
                        <group>
                            <field name="property_type_id"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                            <field name="best_offer" readonly="1"/> <!-- readonly="1" por que el precio se calcula solo-->
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Características">
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="total_area"/>
                            </group>
                        </page>
                        <page string="Jardín">
                            <group>
                                <field name="garden"/>
                                <field name="garden_area" string="Superficie jardín"/>
                                <field name="garden_orientation"/>
                            </group>
                        </page>
                        <page string="Más info.">
                            <group>
                              <field name="buyer_id"/>
                              <field name="salesman_id"/>
                            </group>
                        </page>
                        <!-- Ejercicio 41 -->
                        <page string="Ofertas">
                            <field name="offer_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista de búsqueda para estate.property -->
    <record id="view_estate_property_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Propiedades">
                <!-- a. Campos de búsqueda -->
                <field name="name"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>

                <!-- b. Filtro por usuario actual -->
                <filter string="Mis propiedades"
                        name="filter_my_properties"
                        domain="[('create_uid','=',uid)]"/>

                <!-- Filtro: Propiedades disponibles (Nuevo u Oferta recibida) -->
                <filter string="Disponibles"
                        name="filter_available_properties"
                        domain="[('state','in',('new','offer_received'))]"/>

                <filter string="Mis propiedades disponibles"
                        name="filter_my_available_and"
                        domain="['&amp;', ('create_uid','=',uid), ('state','in',('new','offer_received'))]"/>

                <!-- c, d, e. Agrupaciones -->
                <group expand="1" string="Agrupar por">
                    <filter string="Usuario"
                            name="group_by_user"
                            context="{'group_by':'create_uid'}"/>
                    <filter string="Mes"
                            name="group_by_month"
                            context="{'group_by':'create_date:month'}"/>
                    <filter string="Código postal"
                            name="group_by_postcode"
                            context="{'group_by':'postcode'}"/>
                    <filter string="Estado"
                            name="group_by_state"
                            context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>
