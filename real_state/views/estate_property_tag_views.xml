<?xml version="1.0" encoding="UTF-8"?>
<odoo>
        <!-- Vista de lista estate.property.tag -->
  <record id="view_estate_property_tag_list" model="ir.ui.view">
     <field name="name">estate.property.tag.list</field>
     <field name="model">estate.property.tag</field>    
     <field name="type">list</field>
     <field name="arch" type="xml">
          <list string="Etiquetas de propiedad" editable="bottom">
               <field name="name"/>
          </list>  
     </field>
  </record>

        <!-- Accion -->
  <record id="action_estate_property_tag" model="ir.actions.act_window">
     <field name="name">Etiquetas de propiedad</field>
     <field name="res_model">estate.property.tag</field>
     <field name="view_mode">list</field>
     <field name="view_id" ref="view_estate_property_tag_list"/>
  </record>  
</odoo>
